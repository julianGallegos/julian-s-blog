<h1>Here are all your blog entries...</h1>

<%= link_to 'All my entries', controller: 'articles' %>
<%= link_to 'New Entry', new_article_path %>
<%= link_to 'Back', 
	articles_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>

<%@articles.each do |article| %>
	<tr>
		<td><%=article.title%></td>
		<td><%=article.text%></td>
		<td><%= link_to 'Show', article_path(article)%></td>
		<td> <%= link_to 'Edit', edit_article_path(article)  %></td>
		<td><%=link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'} %>
		</td>
	</tr>
<%end %>


</table>